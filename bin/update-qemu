#! /bin/sh

SRC_DIR="$HOME/g/qemu"
BUILD_DIR="$(mktemp -d --tempdir='/tmp/qemu-build/')"
PREFIX="$HOME/x-tools/qemu"

cd "$BUILD_DIR" &&
CFLAGS="-march=native -O2" LDFLAGS="-march=native -O2" "$SRC_DIR/configure" --prefix="$PREFIX" --enable-cap-ng --enable-attr --enable-vhost-net --enable-guest-base --enable-sdl --enable-vnc --enable-virtfs --enable-curl --enable-curses  --enable-fdt --enable-kvm --enable-system --enable-user  --enable-tcg-interpreter --enable-nptl --enable-guest-agent &&
make -j10 &&
make -j10 install
