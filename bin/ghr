#! /bin/bash
user=`git config --get github.user`
password=`git config --get github.pass`

if [ -n "$GITHUB_USER" ]; then
	user=$GITHUB_USER
fi

if [ -n "$GITHUB_PASS" ]; then
	password=$GITHUB_PASS
fi

api_url="https://api.github.com"

function check_config() {
	if [ -z "$user" ] || [ -z "$password" ]; then
		warn "aborting: github.user or github.password not set"
		exit 1
	fi
}

function api_call() {
	local call="$1"
	shift
	printf "%s(" "$call"
	printf "%s " $*
	printf ");\n"

	curl -u "$user:$password" --netrc "$api_url$call" "$@"
}

function create() {
	local x=`api_call /user/repos -d "{\"name\": \"$1\", \"description\": \"$2\"}"`

	echo "$x"
}

function delete() {
	local repo="$1"
	local res
	read -p "Are you sure you want to delete \"$repo\" (type yes):" res
	case $res in
	[Yy][Ee][Ss])
		api_call /repos/$user/$repo -X DELETE
		;;
	*)
		warn "Not removing \"$repo\""
		;;
	esac
}

function ushow() {
	local s_user="$1"
	api_call /user/"$s_user"
}

function rshow() {
	local s_user="$1"

	if [ 2 -eq $# ]; then
		local s_repo="$2"

		api_call /repos/"$s_user/$s_repo"
		return 0
	fi

	api_call /user/repos
}

function einfo() {
	echo -ne "\033[1;30m>\033[0;36m>\033[1;36m> \033[0m${@}\n"
}

function ewarn() {
	echo -ne "\033[1;30m>\033[0;33m>\033[1;33m> \033[0m${@}\n"
}

function warn() {
	echo "$*" >> /dev/stderr
}

function usage() {
	warn "usage: $0 <add|rm|repo|user> <repo>"
}

function req_param() {
	if [ $1 -gt $2 ]; then
		warn "$action needs at least $1 arguments"
		exit 3
	fi
}

if [ $# -lt 1 ]; then
	usage
	exit 2
fi
check_config

action=$1
shift
case $action in
add|create)
	req_param 1 $#
	create "$1" "$2"
	;;
rm|delete)
	req_param 1 $#
	delete "$1"
	;;
user)
	req_param 1 $#
	ushow "$1"
	;;
repo*)
	rshow $*
	;;
*)
	usage
	exit 1
	;;
esac
