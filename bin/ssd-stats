#!/bin/sh
if [ $# -eq 0 ]
then
        echo "Usage: $0 <device>"
        echo "       $0 sda sdb"
        echo ""
        exit 1
fi
for i in "$@"
do
        echo ""
        echo "Drive $i:"
        drv=`readlink /dev/$i`
        [ -z "$drv" ] && drv="/dev/$i"
        smartctl -a $drv | grep "^[12][089]" | awk '{print $1"\t"$2"\t"$10}'
        echo ""
done
