#! /bin/sh

w () { printf "%s\n" "$*" >&2 ; }

usage () {
	w "usage: $0 show [<file>]"
	w "       $0 gov  [<gov>]"
	w "       $0 speed"
	w "       $0 slow"
	w "       $0 sane"
	#w "       $0 status"
	exit 1
}

CPU_DIR=/sys/devices/system/cpu

set_gov () {
	for i in $CPU_DIR/cpu[0123456789]*; do
		sudo sh -c "echo '$1' > '$i/cpufreq/scaling_governor'"
	done
}

show () {
	for i in $CPU_DIR/cpu[0123456789]*; do
		cpu=$(basename $i)
		printf "$cpu : "
		cat "$i"/cpufreq/"$1"
	done
}

if [ $# -lt 1 ]; then
	usage
fi

case "$1" in
show)
	if [ $# -ne 2 ]; then
		ls $CPU_DIR/cpu0/cpufreq
		exit 0
	fi

	show "$2"
	;;
gov)
	if [ $# -ne 2 ]; then
		show scaling_governor
	else
		set_gov "$2"
	fi
	;;
slow)
	set_gov powersave
	;;
sane)
	set_gov conservative
	;;
speed)
	show scaling_cur_freq
	;;
*)
	w "unknown action '$1'"
	exit 2
	;;
esac
