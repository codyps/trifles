#! /bin/sh

a="Bo Ã˜rsted Andresen <bo.andresen@zlin.dk>"
dest_bin=wgetpaste

d=`stat -c %Y "$1"`

b=$(basename "$1")

if ! [ -f "$1" ]; then
	echo Bad file
	exit 1
fi

case "$b" in
wgetpaste-*.tar.bz2)
	echo tarbal
	tar xf "$1" || exit 1
	v=${b%.tar.bz2}
	if [ -d "$v" ]; then
		for f in $v/*; do
			mv $f . && git add $(basename $f) || exit 1
		done
		rmdir "$v" || exit 1
	fi

	;;
wgetpaste-*.bz2)
	echo bzip
	bzcat "$1" > "$dest_bin" || exit 1
	v=${b%.bz2}
	;;
wgetpaste-*)
	echo direct
	cp "$1" "$dest_bin" || exit 1
	v=${b}
	;;
*)
	echo "$1" was a fail
	exit 1;
esac

git commit --author="$a" --date="$d" -m "$v" -a
